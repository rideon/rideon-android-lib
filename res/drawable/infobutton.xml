<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#449def" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="0mm"
                android:top="0dp"
                android:right="0mm"
                android:bottom="0mm" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#006600"
                android:endColor="#4c9900"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="1mm"
                android:top="1mm"
                android:right="1mm"
                android:bottom="1mm" />
        </shape>
    </item>
</selector>